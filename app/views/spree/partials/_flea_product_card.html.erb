<% store = product.stores.first %>
<%= link_to product_url(product, subdomain: store.code) do %>
  <div
    class="index-product-carousel-image background-image"
    style="background-image:url('<%= asset_path(product.images.first.attachment.url(:product)) %>')"
    data-index="0"
    ></div>
  <%= render :partial => 'spree/partials/product_caption', locals: { product: product, store_name: store.name } %>
<% end %>
