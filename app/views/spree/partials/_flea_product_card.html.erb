<% store = product.stores.first %>
<div class="flea-card">
  <%= link_to product_url(product, subdomain: store.code) do %>
    <div
      class="flea-card--image background-image"
      style="background-image:url('<%= asset_path(product.images.first.attachment.url(:product)) %>')"
      data-index="0"
      ></div>
    <div class="flea-card--caption">
      <div class="flea-card--caption__left">
        <p>
          <%= truncate(product.name, length: 25) %>
        </p>
      </div>
      <div class="pull-right flea-card--caption__right">
        <p class="flea-card--price">
          $<%= product.price.to_money.as_us_dollar.to_s %>
        </p>
    </div>
  </div>
<% end %>
</div>
