<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @user } %>

<div id="edit-account">

  <div data-hook="account_edit" class="col-md-4 col-md-offset-4 login">
    <h6><%= Spree.t(:update_login_info) %></h6>
    <%= form_for Spree::User.new, :as => @user, :url => spree.user_path(@user), :method => :put do |f| %>
      <%= render :partial => 'spree/shared/user_form', :locals => { :f => f } %>
      <p>
        <%= f.submit Spree.t(:update), :class => 'button primary btn btn-success-outline' %>
      </p>
    <% end %>
  </div>
</div>
