<div data-hook="admin_day_hour_form_fields">
  <div class="alpha three columns">
    <%= f.field_container :name do %>
      <%= f.label :day_name, Spree.t(:day_name) %><br />
      <%= f.select :day_name, options_for_select(possible_days.map{|d| [d,d]}), :class => 'fullwidth' %>
      <%= error_message_on :day_hour, :day_name %>
    <% end %>
  </div>

  <div class="two columns">
    <%= f.field_container :code do %>
      <%= f.label :opening_time, Spree.t(:opening_time) %><br />
      <%= f.text_field :opening_time, value: @day_hour.opening_time.strftime(time_format), :class => 'fullwidth time ui-timepicker-input' %>
      <%= error_message_on :day_hour, :opening_time %>
    <% end %>
  </div>

  <div class="two columns">
    <%= f.field_container :closing_time do %>
      <%= f.label :closing_time, Spree.t(:closing_time)%>
      <%= f.text_field :closing_time, value: @day_hour.closing_time.strftime(time_format), :class => 'fullwidth time ui-timepicker-input' %>
      <%= error_message_on :day_hour, :closing_time %>
    <% end %>
  </div>

  <div class="two columns">
    <%= f.field_container :order do %>
      <%= f.label :order, Spree.t(:order)%>
      <%= f.number_field :order, :class => 'fullwidth' %>
      <%= error_message_on :day_hour, :order %>
    <% end %>
  </div>
</div>
